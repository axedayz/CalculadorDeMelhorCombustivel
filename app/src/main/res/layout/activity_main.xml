<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gasolinaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gasolina"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/gasolinaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Digite o valor do litro da gasolina"
        android:layout_below="@id/gasolinaLabel"/>

    <TextView
        android:id="@+id/etanolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etanol"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/gasolinaText"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/etanolText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Digite o valor do litro do etanol"
        android:layout_below="@id/etanolLabel"/>

    <Button
        android:id="@+id/calculaMelhorCombustivelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etanolText"
        android:onClick="calcularMelhorCombustivel"
        android:text="Calcular"/>

    <TextView
        android:id="@+id/resultadoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculaMelhorCombustivelButton"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imagemCombustivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultadoText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
